datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum AttemptStatus {
  PENDING
  PASSED
  FAILED
  EVALUATION_FAILED
}

model User {
  id        String   @id
  email     String   @unique
  createdAt DateTime @default(now())

  goals     LearningGoal[]
  sessions  Session[]
}

model LearningGoal {
  id          String   @id @default(uuid())
  userId      String
  conceptKey  String
  title       String
  description String?
  archivedAt  DateTime?
  createdAt   DateTime @default(now())

  user        User       @relation(fields: [userId], references: [id])
  taskPlans   TaskPlan[]
  sessions    Session[]
}

model TaskPlan {
  id          String   @id @default(uuid())
  goalId      String
  difficulty  Int
  createdAt   DateTime @default(now())

  goal        LearningGoal @relation(fields: [goalId], references: [id])
  tasks       Task[]
  sessions    Session[]
}

model Task {
  id          String   @id @default(uuid())
  taskPlanId  String
  orderIndex  Int
  content     String
  createdAt   DateTime @default(now())

  taskPlan    TaskPlan @relation(fields: [taskPlanId], references: [id])
  attempts    TaskAttempt[]

  @@unique([taskPlanId, orderIndex])
}

model Session {
  id          String   @id @default(uuid())
  goalId      String
  taskPlanId  String
  userId      String
  startedAt   DateTime @default(now())
  completedAt DateTime?

  goal        LearningGoal @relation(fields: [goalId], references: [id])
  taskPlan    TaskPlan     @relation(fields: [taskPlanId], references: [id])
  user        User         @relation(fields: [userId], references: [id])
  attempts    TaskAttempt[]
}

model TaskAttempt {
  id          String   @id @default(uuid())
  sessionId   String
  taskId      String
  response    String
  status      AttemptStatus
  createdAt   DateTime @default(now())

  session     Session @relation(fields: [sessionId], references: [id])
  task        Task    @relation(fields: [taskId], references: [id])
}